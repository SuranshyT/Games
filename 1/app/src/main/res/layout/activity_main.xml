<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/title_off_game"
        android:textColor="#888080"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="@string/player1"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/rec1"
        style="@style/cell"
        android:layout_marginStart="86dp"
        android:layout_marginTop="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerIs" />

    <TextView
        android:id="@+id/rec2"
        style="@style/cell"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/rec1"
        app:layout_constraintTop_toTopOf="@+id/rec1" />

    <TextView
        android:id="@+id/rec3"
        style="@style/cell"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/rec2"
        app:layout_constraintTop_toTopOf="@+id/rec1" />

    <TextView
        android:id="@+id/rec4"
        style="@style/cell"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/rec1"
        app:layout_constraintTop_toBottomOf="@+id/rec1" />

    <TextView
        android:id="@+id/rec5"
        style="@style/cell"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/rec4"
        app:layout_constraintTop_toTopOf="@+id/rec4" />

    <TextView
        android:id="@+id/rec6"
        style="@style/cell"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/rec5"
        app:layout_constraintTop_toTopOf="@+id/rec5" />

    <TextView
        android:id="@+id/rec7"
        style="@style/cell"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/rec4"
        app:layout_constraintTop_toBottomOf="@+id/rec4" />

    <TextView
        android:id="@+id/rec8"
        style="@style/cell"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/rec7"
        app:layout_constraintTop_toTopOf="@+id/rec7" />

    <TextView
        android:id="@+id/rec9"
        style="@style/cell"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/rec8"
        app:layout_constraintTop_toTopOf="@+id/rec8" />

</androidx.constraintlayout.widget.ConstraintLayout>